{
  "manifest_version": 3,
  "name": "TagPivot",
  "version": "2026.1.0"
  "description": "Local-only overlay that reveals your recurring page tags, bridges, and counterpoints.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "bg/service_worker.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "exclude_matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "http://[::1]/*",
        "https://localhost/*",
        "https://127.0.0.1/*",
        "https://[::1]/*"
      ],
      "js": ["content/inject.js"],
      "css": ["ui.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "TagPivot",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle Ctrl+F++ overlay"
    }
  }
}